<div class="row">
<% @categories.each do |category| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <%= image_tag "Art.jpg", width: "242", height: "200"%>
      <div class="caption">
        <h3><%= link_to category.title, category_path(category)%></h3>
        <p>Bacon ipsum dolor amet meatball pig corned beef flank kielbasa shankle pancetta salami pork shank tri-tip.</p>
      </div>
    </div>
  </div>
  
<% end %>


  
</div>
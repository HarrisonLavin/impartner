  answer.append(data.content);
  $(".answer-<%= @answer.id %>").parent().parent().toggleClass("panel panel-primary panel panel-success");
  swal("Good job!", "You got the question right!", "success");
  $("li.list-group-item.active > span").text(badge - 1);
<% end %>


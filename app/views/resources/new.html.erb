<%= form_for @resource, url: lesson_resources_path(@lesson) do |f| %>
<%= f.label :type_of %>
<%= f.select :type_of, ["Reading", "Image", "Video","Audio", "Other"] %>

<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :description %>
<%= f.text_field :description %>

<%= f.label :content, 'URL' %>
<%= f.text_field :content %>
<%= f.submit %>
<% end %>
<br>
<h2>Create a new lesson for <strong><%= @track.name %></strong> </h2>

<div class="form-style-6">
  <%= form_for @lesson, remote: true do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :duration %>
    <%= f.text_field :duration %>
    <%= f.hidden_field :track_id %>
    <%= f.submit %>
  <% end %>
</div>

<div id="lesson_form"></div>

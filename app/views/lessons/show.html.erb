<h1><%= @lesson.title %></h1>

<h2>Lesson Content
  <% if current_user.teacher == @lesson.track.teacher %>

    <%= link_to "Add Resource", new_lesson_resource_path(@lesson), class: "btn btn-default btn-lg" %>

    <%= link_to "Create Assessment", new_lesson_assessment_path(@lesson), class: "btn btn-default btn-lg"%>

  <% end %>
</h2>

 <div class='tabs tabs_active'>
    <ul class='horizontal'>
      <li><a href="#tab-1">Resources</a></li>
      <li><a href="#tab-2">Assessments</a></li>
    </ul>
    <div id='tab-1'><%= render "resources/show" %></div>
    <div id='tab-2'><%= render partial: "resources/assessments", locals: {assessments: @assessments, answer: @answer, student: @student} %></div>
</div>

<hr>

<div class="completed-resources">
  <%= render "resources/show_completed" %>
</div>



